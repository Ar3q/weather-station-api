{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "plugins": ["mocha"],
  "extends": ["plugin:mocha/recommended", "standard", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-console": [
      "error",
      {
        "allow": ["error", "info"]
      }
    ]
  }
}
